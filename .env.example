# EduMall Environment Configuration
# Copy this file to .env and fill in your values

# Environment
VITE_APP_ENV=development

# Version Info
VITE_APP_VERSION=1.0.0
VITE_APP_BUILD_TIME=2024-01-01T00:00:00.000Z

# API Configuration
VITE_APP_API_URL=http://localhost:3000/api
VITE_APP_CDN_URL=http://localhost:3000/static

# Analytics and Monitoring
VITE_APP_ANALYTICS_KEY=your-analytics-key-here
VITE_APP_SENTRY_DSN=your-sentry-dsn-here
VITE_APP_HOTJAR_ID=your-hotjar-id-here

# Feature Flags
VITE_APP_ENABLE_ANALYTICS=false
VITE_APP_ENABLE_ERROR_REPORTING=false
VITE_APP_ENABLE_SERVICE_WORKER=false

# Payment Gateway
VITE_APP_RAZORPAY_KEY_ID=your-razorpay-key-here
VITE_APP_STRIPE_PUBLIC_KEY=your-stripe-public-key-here

# External Services
VITE_APP_FIREBASE_CONFIG=your-firebase-config-json-here

# Security
VITE_APP_CSP_NONCE=auto-generated-nonce